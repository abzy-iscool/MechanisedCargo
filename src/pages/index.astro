---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import type { Services } from '../types';
import ServicesPreview from '../components/ServicesPreview.astro';

// Data Fetching: List all Markdown posts in the repo.
const services = await Astro.glob<Services>('./service/**/*.md');
const featuredService = services[0]!;

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
	<head>
		<MainHead
			title="Mechanised Cargo Systems (T) LTD"
			description="Logistics and Freight Forwarding Company"
		/>
		<style>
			.wrapper {
				margin-top: 2em;
				margin-bottom: 2em;
			}

			.hero {
				position: relative;
				overflow: hidden;
			}

			@media (min-width: 750px) {
				.hero {
					height: 45vw;
				}
			}

			.img {
				display: block;
				width: 100%;
				height: auto;
			}

			.gradient,
			.gradient2 {
				background-image: url('/assets/mesh-gradient2.png');
				background-size: cover;
				pointer-events: none;
				mix-blend-mode: screen;
				width: 100%;
				height: 100%;
				position: absolute;
				top: 0;
				left: 0;
				z-index: 2;
			}

			.gradient2 {
				mix-blend-mode: multiply;
				background-size: cover;
			}

			.overlay {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 10;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: center;
				padding-left: 2rem;
				color: darksalmon;
			}

			@media (min-width: 750px) {
				.overlay {
					padding-left: 4rem;
				}
			}

			.title {
				font-weight: 900;
				font-size: var(--f-u6);
				margin-bottom: 0.5rem;
				margin-top: 0;
			}

			@media (min-width: 750px) {
				.title {
					font-size: var(--f-u12);
				}
			}

			.grid {
				display: grid;
				grid-gap: 2rem;
			}

			@media (min-width: 1200px) {
				.grid {
					grid-template-columns: 2fr 1fr;
				}
			}

			.sectionTitle {
				font-weight: 700;
				font-size: var(--f-u8);
				margin-top: 4rem;
				margin-bottom: 2rem;
			}

			.roles {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				font-size: var(--f-d1);
			}

			.role {
				position: relative;
				display: inline-block;
				white-space: nowrap;
				font-weight: 900;
				color: var(--t-fg);
				background-color: darksalmon;
				padding: 0.25em 0.5em;
				z-index: 2;
			}

			@media (min-width: 750px) {
				.role {
					font-size: var(--f-u3);
				}
			}

			.role:nth-of-type(1) .invert {
				background-color: var(--c-pink);
			}

			.role:nth-of-type(2) .invert {
				background-color: var(--c-blue);
			}

			.role:nth-of-type(3) .invert {
				background-color: var(--c-green);
			}

			.role:hover .invert {
				clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
			}

			.invert {
				position: absolute;
				color: var(--t-fg);
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
				transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
			}

			.desc {
				font-size: var(--f-u1);
				margin-top: 1.5rem;
				margin-bottom: 0;
			}

			.subtitle {
				display: block;
				font-weight: 400;
				font-size: var(--f-d6);
				letter-spacing: -0.0625em;
			}

			.bio {
				line-height: 2;
				margin-bottom: 2rem;
			}

			.bio > span:first-of-type {
				line-height: 1;
				margin-bottom: 0.5em;
				display: block;
				font-weight: 700;
				font-size: var(--f-u4);
			}
			
			.button{
				color: red;
				text-decoration: none;
			}

			.buttonContainer {
				color: red;
				text-align: center;
				margin-top: 2em;
			}

			.button:hover{
				color: black;
				background-color: orangered;
  				-moz-transition: all 0.2s ease-in;
  				-o-transition: all 0.2s ease-in;
  				-webkit-transition: all 0.2s ease-in;
  				transition: all 0.2s ease-in;
			}

			.section3container{
				display: grid;
				align-items: center;
				justify-content: center;
				padding: 5%;
				margin: 5%;
				background-color: #0c090d;
				box-shadow: 10px 10px #e01a4f, 15px 15px #f15946, 20px 20px #f9c22e;
			}

			#quote-title{
				color:  White;
			}

			#quote-subtitle{
				color: white;
				font-weight: 700;
				font-size: var(--f-u3);
			}
		</style>
	</head>
	<body>
		<Nav />
		<header class="hero">
			<div class="gradient"></div>
			<div class="gradient2"></div>
			<div class="overlay">
				<h1 class="title">
					<small class="subtitle">
						Creativity is an import-export business.
					</small>
					Mechanised Cargo Systems
				</h1>
				<div class="roles">
					<span class="role"> Freightage <span class="invert"> ðŸššTransit</span></span>
					<span class="role"> Clearing & Forwarding <span class="invert">ðŸ“¦ Containers</span></span>
					<span class="role"> Logistics <span class="invert">ðŸš¢ goods</span></span>
				</div>
				<p class="desc">Trucks, Trailers, Agents And Containers</p>
			</div>
		</header>
			
		<main class="wrapper">
			<div class="grid">
				<div class="section">
					<h3 class="sectionTitle"><strong style="color: red;">Our</strong> Work</h3>
					<ServicesPreview service={featuredService} />
					<div class="buttonContainer">
						<a href="/blogs/" class="button">View All</a>
					</div>
				</div>
				<div class="section">
					<h3 class="sectionTitle">About <strong style="color: red;">Us</strong></h3>
					<p class="bio">
						<span>Welcome</span> Established in 1993 operating in the name of F & P Express Services Ltd and from very humble beginnings has grown to become a force to reckon with among independent customs brokerage and international freight forwarding companies. Since 1993 we have steadily expanded our organization and clientele to become one of Dar es Salaamâ€™s leading customs clearance and freight forwarding companies.
					</p>
					<p>
						<a href="/about" style="color: red;">Read more</a>
					</p>
				</div>
			</div>
		</main>
		<div class="section3container">
			<h1 id="quote-title">Our Philosophy</h1>
			<p id="quote-subtitle">
				The reality about transportation is that it's future oriented, if we were planning for what we have were behind the curve.
			</p>
		</div>
		<Footer />
	</body>
</html>
